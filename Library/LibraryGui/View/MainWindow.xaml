<UserControl x:Class="LibraryGui.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:LibraryGui.ViewModel"
        mc:Ignorable="d"  d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel}">
    <StackPanel Orientation="Vertical" >
        <TextBox Text="{Binding SearchPhrase, Mode=OneWayToSource}" Margin="5"/>
        <StackPanel Orientation="Horizontal" Margin="5" Width="Auto">
            <Button Margin="5 0 0 0" Command="{Binding SearchCommand}">Поиск</Button>
            <Button Margin="5 0 0 0" Command="{Binding AddBookCommand}">Добавить книгу</Button>
            <Button Margin="5 0 0 0" Command="{Binding GetAllBooksCommand}">Получить все книги</Button>
        </StackPanel>
        <ListView MinHeight="300" Margin="5 0 0 5" ItemsSource="{Binding Path=FoundedBooks}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}">Название</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
