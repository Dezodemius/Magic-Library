<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>8</LangVersion>
        <TargetFramework>net461</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="BitMiracle.Docotic.Pdf" Version="7.3.11044" />
      <PackageReference Include="iTextSharp" Version="5.5.13.1" />
      <PackageReference Include="NEST" Version="7.7.1" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
      <PackageReference Include="NLog" Version="4.7.2" />
      <PackageReference Include="System.ValueTuple" Version="4.5.0" />
      <PackageReference Include="Tesseract" Version="4.1.1" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Resources\LibraryResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>LibraryResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Remove="Resources\LibraryResources.ru-ru.resx" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\LibraryResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>LibraryResources.resx</DependentUpon>
      </Compile>
    </ItemGroup>
    <ItemGroup>
        <None Update="stopwords.txt" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>
    <ItemGroup>
      <Reference Include="System.Net.Http" />
    </ItemGroup>
    <ItemGroup>
      <None Remove="eng.traineddata" />
    </ItemGroup>
    <ItemGroup>
      <Content Include="tessdata\eng.traineddata">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <None Remove="tessdata\pus.traineddata" />
      <None Remove="tessdata\ukr.traineddata" />
      <None Remove="tessdata\rus.traineddata" />
      <Content Include="tessdata\rus.traineddata">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <None Remove="tessdata\fast\eng.traineddata" />
      <Content Include="tessdata\fast\eng.traineddata">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <None Remove="tessdata\fast\rus.traineddata" />
      <Content Include="tessdata\fast\rus.traineddata">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
    <Target Name="CopyNLogConfig" AfterTargets="AfterBuild">
        <Copy SourceFiles="NLog.config" DestinationFolder="$(OutDir)" />
    </Target>
</Project>
